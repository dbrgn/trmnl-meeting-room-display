# Configuration settings for the TRMNL Meeting Room Display server
# Copy this file to .env and adjust the values as needed

# Server configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8080
# Public URL for the server (used in responses that reference the server)
SERVER_URL=http://localhost:8080

# Database configuration
DATABASE_PATH=devices.db

# Authentication
# Replace with your own secure token for production
ACCESS_TOKEN=your-secret-access-token

# Display configuration
FONT_PATH=assets/fonts/BlockKie.ttf
REFRESH_RATE=200